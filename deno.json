{
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.8",
    "@std/collections": "jsr:@std/collections@^1.0.9",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/text": "jsr:@std/text@^1.0.9",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "hono": "jsr:@hono/hono@^4.6.13"
  },
  "tasks": {
    "formkit-theme-deno:fk-pro-key": {
      "description": "Read FormKit Pro key for 'Deno' theme",
      "command": "deno run -RWE echo-fk-pro-key.ts --formkit_theme=DENO >> formkit-theme-deno/.env"
    },
    "formkit-theme-deno:build": {
      "description": "Build FormKit 'Deno' theme",
      "command": "cd formkit-theme-deno && deno install && deno task build-web",
      "dependencies": [
        "formkit-theme-deno:fk-pro-key"
      ]
    },
    "formkit-theme-shadcn:fk-pro-key": {
      "description": "Read FormKit Pro key for 'Shadcn' theme",
      "command": "deno run -RWE echo-fk-pro-key.ts --formkit_theme=SHADCN >> formkit-theme-shadcn/.env"
    },
    "formkit-theme-shadcn:build": {
      "description": "Build FormKit 'Shadcn' theme",
      "command": "cd formkit-theme-shadcn && deno install && deno task build-web",
      "dependencies": [
        "formkit-theme-shadcn:fk-pro-key"
      ]
    },
    "build-themes": {
      "command": "echo Done!",
      "description": "Build all themes",
      "dependencies": [
        "formkit-theme-deno:build",
        "formkit-theme-shadcn:build"
      ]
    },
    "dev": {
      "command": "deno run -A --watch main.tsx",
      "dependencies": [
        "formkit-theme-deno:build",
        "formkit-theme-shadcn:build"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "exclude": [
    "formkit-theme-deno"
  ]
}
